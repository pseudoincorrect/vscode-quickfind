{
  "name": "vscode-quickfind",
  "displayName": "QuickFind",
  "description": "Fast text search and file finding extension for VSCode with regex support",
  "version": "0.8.0",
  "author": "pseudoincorrect",
  "publisher": "pseudoincorrect",
  "icon": "assets/images/quickfind-logo-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pseudoincorrect/vscode-quickfind"
  },
  "bugs": {
    "url": "https://github.com/pseudoincorrect/vscode-quickfind/issues"
  },
  "homepage": "https://github.com/pseudoincorrect/vscode-quickfind#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "search",
    "find",
    "regex",
    "fuzzy",
    "telescope",
    "quick",
    "file search",
    "text search",
    "grep",
    "ripgrep"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quickFind.searchInFile",
        "title": "QuickFind: Search in Current File"
      },
      {
        "command": "quickFind.searchInFolder",
        "title": "QuickFind: Search in Current Folder"
      },
      {
        "command": "quickFind.searchFiles",
        "title": "QuickFind: Search Files"
      },
      {
        "command": "quickFind.historyPrevious",
        "title": "QuickFind: Previous Search History"
      },
      {
        "command": "quickFind.historyNext",
        "title": "QuickFind: Next Search History"
      },
      {
        "command": "quickFind.clearHistory",
        "title": "QuickFind: Clear Search History"
      }
    ],
    "keybindings": [
      {
        "command": "quickFind.searchInFile",
        "key": "ctrl+k ctrl+t",
        "mac": "cmd+k cmd+t"
      },
      {
        "command": "quickFind.searchInFolder",
        "key": "ctrl+k ctrl+g",
        "mac": "cmd+k cmd+g"
      },
      {
        "command": "quickFind.searchFiles",
        "key": "ctrl+k ctrl+f",
        "mac": "cmd+k cmd+f"
      },
      {
        "command": "quickFind.historyPrevious",
        "key": "ctrl+up",
        "mac": "cmd+up",
        "when": "quickFindFocused"
      },
      {
        "command": "quickFind.historyNext",
        "key": "ctrl+down",
        "mac": "cmd+down",
        "when": "quickFindFocused"
      }
    ],
    "configuration": {
      "title": "QuickFind",
      "properties": {
        "quickFind.maxFileSize": {
          "type": "string",
          "default": "1MB",
          "description": "Maximum file size for search (e.g., '1MB', '500KB', '2GB')"
        },
        "quickFind.maxResults": {
          "type": "number",
          "default": 1000,
          "minimum": 1,
          "maximum": 10000,
          "description": "Maximum number of search results"
        },
        "quickFind.accentColor": {
          "type": "string",
          "default": "#00ff88",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Hex color code for search box border and selected result highlight (e.g., #00ff88)"
        },
        "quickFind.maximizedLayout": {
          "type": "boolean",
          "default": false,
          "description": "Automatically maximize the search panel to take full available space during search, with a vertical layout"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile && vsce package --out releases/",
    "release": "npm run compile && vsce package --out releases/ && echo 'Extension packaged to releases/ folder'",
    "install-extension": "npm run package && code --install-extension releases/vscode-quickfind-$(node -p \"require('./package.json').version\").vsix",
    "clean-releases": "node -e \"const fs = require('fs'); const path = require('path'); try { fs.readdirSync('releases').filter(f => f.endsWith('.vsix')).forEach(f => fs.unlinkSync(path.join('releases', f))); } catch(e) { console.log('No .vsix files to clean'); }\""
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.28.0",
    "mocha": "^11.7.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fuse.js": "^7.1.0"
  }
}
